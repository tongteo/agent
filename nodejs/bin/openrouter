#!/usr/bin/env node
require('dotenv').config();
const { ChatBot } = require('../src/chat-bot');

const apiKey = process.env.OPENROUTER_API_KEY;
const model = process.env.OPENROUTER_MODEL || 'arcee-ai/trinity-large-preview:free';
const agentMode = process.argv.includes('--agent');

if (!apiKey) {
    console.error('âŒ Error: OPENROUTER_API_KEY not found. Please set it in .env file or environment variable.');
    process.exit(1);
}

const bot = new ChatBot(apiKey, model, agentMode);
bot.init().then(() => bot.chat());
